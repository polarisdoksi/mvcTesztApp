<!--tpalee-->
@{
    ViewData["Title"] = "Index";
}

<h1>ApplicationType</h1>

@model IEnumerable<mvcTesztApp.Models.ApplicationType>
<p><a asp-controller="ApplicationType" asp-action="Create" class="btn btn-primary"><i class="fas fa-plus "></i>&nbsp;Create new ApplicationType</a></p>
<br />
<br />
@if (Model.Count() > 0)
{
    <table class="table-bordered table-striped" width="50%">
        <thead>
            <tr>
                <th><b>AZON</b></th>
                <th><b>NÉV</b></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.id</td>
                    <td>@item.Name</td>
                    <td class="text-center">
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="ApplicationType" asp-route-Id="@item.id" asp-action="Edit" class="btn btn-primary mx-1">
                                <i class="fas fa-edit"></i>
                            </a>
                            <a asp-controller="ApplicationType" asp-route-Id="@item.id" asp-action="Delete" class="btn btn-danger mx-1">
                                <i class="fas fa-trash-can"></i>
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>Üres a tábla</p>
}

